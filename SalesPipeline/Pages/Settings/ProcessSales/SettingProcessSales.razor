@page "/setting/processsales"

<PageTitle>ตั้งค่ากระบวนการขาย</PageTitle>

<MessageError errorMessage="@_errorMessage" />

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2"><img src="/image/icon/assign_user128x.png" width="55" /></div>
						<div class="p-2">
							<p class="back_topic">ตั้งค่า กระบวนการขาย</p>
						</div>
						@if (_appSet.Value.ServerSite == ServerSites.DEV)
						{
							<div class="p-2 text-end">
								<a href="/setting/processsales/reply">Reply</a>
							</div>
						}
					</div>
					<div class="row mt-3">
						<div class="col">
							<div class="table-responsive border-top">
								<table class="table table_list">
									<thead>
										<tr>
											<th class="text-center">กระบวนการขาย</th>
											<th class="text-center">จัดการ</th>
										</tr>
									</thead>
									<tbody>
										@if (Items == null)
										{
											<tr class="text-center align-middle">
												<td colspan="100">
													<i class="fa-solid fa-circle-notch fa-spin text-black-50 fa-xl my-2"></i>
												</td>
											</tr>
										}
										else if (Items.Count == 0)
										{
											<tr class="text-center align-middle">
												<td colspan="100">
													<em>ไม่พบข้อมูล</em>
												</td>
											</tr>
										}
										else
										{
											foreach (var item in Items)
											{
												bool status = item.Status == StatusModel.Active;

												<tr>
													<td class="">@item.Name</td>
													<td class="text-center">
														<a href="/setting/processsales/update/@item.Id">แก้ไข</a>
														@if (_appSet.Value.ServerSite == ServerSites.DEV)
														{
															<span>
																/ <a href="/setting/processsales/formgenerator/create/@item.Id">forms</a>
															</span>
														}
													</td>
												</tr>
											}
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<NotPermissionPage />
}


