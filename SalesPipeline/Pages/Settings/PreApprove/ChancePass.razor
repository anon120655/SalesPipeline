
@page "/setting/pre/chancepass"

<PageTitle>โอกาสขอสินเชื่อผ่าน</PageTitle>

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2"><img src="/image/icon/setting.png" width="45" /></div>
						<div class="p-2">
							<p class="back_topic">เครื่องมือ Pre-Approve > โอกาสขอสินเชื่อผ่าน</p>
						</div>
					</div>
					<div class="col-12 mt-5">
						<div class="row">
							<div class="col-12 col-xl">
							</div>
							<div class="col-12 col-xl-9">
								<div class="table-responsive border-top">
									<table class="table table_list">
										<thead>
											<tr>
												<th class="text-center">Z</th>
												<th class="text-center">Credit Score</th>
												<th class="text-center">Prob(default)</th>
												<th class="text-center">จัดการ</th>
											</tr>
										</thead>
										<tbody>
											@if (Items == null)
											{
												<tr class="text-center align-middle">
													<td colspan="100">
														<Spinner Class="my-2" Type="SpinnerType.Dots" Color="SpinnerColor.Secondary" />
													</td>
												</tr>
											}
											else if (Items.Count == 0)
											{
												<tr class="text-center align-middle">
													<td colspan="100">
														<em>ไม่พบข้อมูล</em>
													</td>
												</tr>
											}
											else
											{
												foreach (var item in Items)
												{
													<tr>
														<td class="text-center">@item.Z</td>
														<td class="text-center">@item.CreditScore</td>
														<td class="text-center">@item.Prob</td>
														<td class="text-center">
															<a class="text-action" role="button" @onclick="(async()=> await OnShow(item.Id))">แก้ไข</a>
														</td>
													</tr>
												}
											}
										</tbody>
									</table>
								</div>
							</div>
							<div class="col-12 col-xl">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<Modal @ref="modalForm"
		   Title="โอกาสขอสินเชื่อผ่าน"
		   IsVerticallyCentered="true"
		   HeaderCssClass="headermodal_default">
		<BodyTemplate>
			<EditForm Model="@formModel" OnValidSubmit="Save">
				<DataAnnotationsValidator />
				<div class="row my-3">
					<div class="col-12">
						<div class="form-group row mb-3">
							<label class="col-4 col-form-label text-lg-end">Z</label>
							<div class="col-7">
								<label class="col-form-label">@formModel.Z</label>
								<ValidationMessage For="@(() => formModel.Z)" />
							</div>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group row mb-3">
							<label class="col-4 col-form-label text-lg-end">Credit Score</label>
							<div class="col-7">
								<label class="col-form-label">@formModel.CreditScore</label>
								<ValidationMessage For="@(() => formModel.CreditScore)" />
							</div>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group row mb-3">
							<label class="col-4 col-form-label text-lg-end">Prob</label>
							<div class="col-7">
								<input @bind="formModel.Prob" type="text" class="form-control">
								<ValidationMessage For="@(() => formModel.Prob)" />
							</div>
						</div>
					</div>
				</div>
				<div class="row my-3 text-center">
					<div class="d-flex justify-content-evenly align-items-center">
						<div class="p-2">
							<Button Class="mw_6r" Color="ButtonColor.Secondary" @onclick="OnHide">ปิด</Button>
						</div>
						<div class="p-2">
							<Button Color="ButtonColor.Primary" Type="ButtonType.Submit" Disabled="@isLoading" Class="mw_6r">
								@if (isLoading)
								{
									<Spinner Color="SpinnerColor.Light" Size="SpinnerSize.Small" />
								}
								บันทึก
							</Button>
						</div>
					</div>
				</div>
			</EditForm>
		</BodyTemplate>
	</Modal>

}
else
{
	<NotPermissionPage />
}

