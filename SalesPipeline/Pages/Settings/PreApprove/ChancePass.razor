
@page "/setting/pre/chancepass"

<PageTitle>โอกาสขอสินเชื่อผ่าน</PageTitle>

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2"><img src="/image/icon/setting.png" width="45" /></div>
						<div class="p-2">
							<p class="back_topic">เครื่องมือ Pre-Approve > โอกาสขอสินเชื่อผ่าน</p>
						</div>
					</div>
					<div class="col-12 mt-5">
						<div class="row">
							<div class="col-12 col-xl">
							</div>
							<div class="col-12 col-xl-9">
								<div class="table-responsive border-top">
									<table class="table table_list">
										<thead>
											<tr>
												<th class="text-center">Z</th>
												<th class="text-center">Credit Score</th>
												<th class="text-center">Prob(default)</th>
											</tr>
										</thead>
										<tbody>
											@if (Items == null)
											{
												<tr class="text-center align-middle">
													<td colspan="100">
														<Spinner Class="my-2" Type="SpinnerType.Dots" Color="SpinnerColor.Secondary" />
													</td>
												</tr>
											}
											else if (Items.Count == 0)
											{
												<tr class="text-center align-middle">
													<td colspan="100">
														<em>ไม่พบข้อมูล</em>
													</td>
												</tr>
											}
											else
											{
												foreach (var item in Items)
												{
													<tr>
														<td class="text-center">@item.Z</td>
														<td class="text-center">@item.CreditScore</td>
														<td class="text-center">@item.Prob</td>
													</tr>
												}
											}
										</tbody>
									</table>
								</div>
							</div>
							<div class="col-12 col-xl">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<NotPermissionPage />
}

