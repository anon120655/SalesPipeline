@page "/dashboard/returneditems"

<PageTitle>รายการส่งกลับ</PageTitle>

<MessageError errorMessage="@_errorMessage" />

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2">
							<a href="/dashboard"><img src="/image/icon/circle-left-x100.png" width="40" /></a>
						</div>
						<div class="p-2">
							<p class="back_topic">รายงานรายการส่งกลับ</p>
						</div>
					</div>
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-5 row-cols-xxl-6 my-4 filter_s">
						<div class="col mb-2">
							<label class="form-label">ค้นหาลูกค้า</label>
							<div class="input-group">
								<input @bind="filter.searchtxt" class="form-control" type="search" placeholder="">
								<span class="input-group-append ms-0">
									<button @onclick="Search" class="btn rounded-start-0 border border-start-0" type="button">
										<i class="fa fa-search"></i>
									</button>
								</span>
							</div>
						</div>
						<div class="col mb-2">
							<label class="form-label">ชื่อผู้ติดต่อ</label>
							<div class="input-group">
								<input @bind="filter.contact_name" class="form-control" type="search" placeholder="">
								<span class="input-group-append ms-0">
									<button @onclick="Search" class="btn rounded-start-0 border border-start-0" type="button">
										<i class="fa fa-search"></i>
									</button>
								</span>
							</div>
						</div>
						<div class="col mb-2">
							<label class="form-label">ประเภทธุรกิจ</label>
							<select @onchange="OnBusinessType" value="@filter.businesstype" id="BusinessType" class="selectpickerdefault" data-style="select_btn_set" data-live-search="true">
								<option value="">ทั้งหมด</option>
								@if (LookUp.BusinessType?.Count > 0)
								{
									foreach (var item in LookUp.BusinessType)
									{
										<option value="@item.Id">@item.Name</option>
									}
								}
							</select>
						</div>
						<div class="col mb-2">
							<label class="form-label">กิจการสาขาภาค</label>
							<select id="DepBranch" class="selectpicker" data-style="select_btn_set" title="ทั้งหมด" data-actions-box="true" data-live-search="true">
								@if (LookUp.DepartmentBranch?.Count > 0)
								{
									foreach (var item in LookUp.DepartmentBranch)
									{
										<option value="@item.Id">@item.Name</option>
									}
								}
							</select>
						</div>
						<div class="col mb-2">
							<label class="form-label">จังหวัด</label>
							<select id="Province" class="selectpicker selectInit" data-style="select_btn_set" title="ทั้งหมด" data-live-search="true">
								@if (LookUp.Provinces?.Count > 0)
								{
									foreach (var item in LookUp.Provinces)
									{
										<option value="@item.ProvinceID">@item.ProvinceName</option>
									}
								}
							</select>
						</div>
						<div class="col mb-2">
							<label class="form-label">สาขา</label>
							<select id="Branch" class="selectpicker selectInit" data-style="select_btn_set" title="ทั้งหมด" data-actions-box="true" data-live-search="true">
								@if (LookUp.Branchs?.Count > 0)
								{
									foreach (var item in LookUp.Branchs)
									{
										<option value="@item.BranchID">@item.BranchName</option>
									}
								}
							</select>
						</div>
						<div class="col mb-2">
							<label class="form-label">ชื่อผู้รับผิดชอบ</label>
							<div class="input-group">
								<input @bind="filter.assignrm_name" class="form-control" type="search" placeholder="">
								<span class="input-group-append ms-0">
									<button @onclick="Search" class="btn rounded-start-0 border border-start-0" type="button">
										<i class="fa fa-search"></i>
									</button>
								</span>
							</div>
						</div>
						<div class="col mb-2 mt-3">
							<div class="d-flex flex-row">
								<div class="pe-3">
									<button @onclick="Search" type="button" class="btn btn-primary text-white mw_7r w-100">
										<i class="fa fa-search fa-xs"></i> ค้นหา
									</button>
								</div>
								<div class="pe-2">
									<button @onclick="ExportExcel" type="button" class="btn btn-success text-white mw_7r w-100">
										<i class="fa-regular fa-file-excel"></i> ส่งออก
									</button>
								</div>
							</div>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-12">
							<div class="table-responsive border-top">
								<table class="table table_list">
									<thead>
										<tr>
											<th class="text-center">ลำดับที่</th>
											<th class="text-center">ชื่อลูกค้า</th>
											<th class="text-center">ผู้ติดต่อ</th>
											<th class="text-center">ประเภทธุรกิจ</th>
											<th class="text-center">กิจการสาขาภาค</th>
											<th class="text-center">จังหวัด</th>
											<th class="text-center">สาขา</th>
											<th class="text-center">วันที่ส่งกลับ</th>
											<th class="text-center">ผู้รับผิดชอบ</th>
										</tr>
									</thead>
									<tbody>
										@if (Items == null)
										{
											<tr class="text-center align-middle">
												<td colspan="100">
													<i class="fa-solid fa-circle-notch fa-spin text-black-50 fa-xl my-2"></i>
												</td>
											</tr>
										}
										else if (Items.Count == 0)
										{
											<tr class="text-center align-middle">
												<td colspan="100">
													<em>ไม่พบข้อมูล</em>
												</td>
											</tr>
										}
										else
										{
											int _orderNo = Pager != null ? (Pager.PageSize * Pager.CurrentPage - 10) : 0;
											int SequenceNo = 0;
											foreach (var item in Items)
											{
												<tr>
													<td class="text-center">@(_orderNo + (SequenceNo + 1))</td>
													<td class="">@item.CompanyName</td>
													<td class="text-center">@item.Customer?.ContactName</td>
													<td class="text-center">@item.Customer?.Master_BusinessTypeName</td>
													<td class="text-center">@GeneralUtils.EmptyTo(item.Master_Branch_RegionName)</td>
													<td class="text-center">@GeneralUtils.EmptyTo(item.ProvinceName)</td>
													<td class="text-center">@GeneralUtils.EmptyTo(item.BranchName)</td>
													<td class="text-center">
														@if (item.Sale_Statuses != null)
														{
															var createDate = item.Sale_Statuses.OrderByDescending(x => x.CreateDate).FirstOrDefault()?.CreateDate;
															<td class="text-center">@GeneralUtils.DateToThString(createDate)</td>
														}
													</td>
													<td class="text-center">@GeneralUtils.EmptyTo(item.AssUserName)</td>
												</tr>
											}
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div>
						<PaginationBack DisplayItems="@(Items?.Count ?? 0)"
										TotalItems="@(Pager?.TotalItems ?? 0)"
										Pager="@Pager"
										OnShowOnPage="@OnSelectPagesize"
										OnSelectedPage="@OnSelectPage"
										ParameterAll="@filter?.SetParameter()">
						</PaginationBack>
					</div>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<NotPermissionPage />
}







