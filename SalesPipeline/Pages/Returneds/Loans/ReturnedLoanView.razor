@page "/return/loan/view/{id:guid}"

<PageTitle>รายการที่ส่งคืน</PageTitle>

<MessageError errorMessage="@_errorMessage" />

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2"><img src="/image/icon/customerinfo.png" width="45" /></div>
						<div class="p-2">
							<p class="back_topic">ข้อมูลและสถานะลูกค้า</p>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-12 tabs_elm">
							<Tabs EnableFadeEffect="true" NavStyle="NavStyle.Pills">
								<Tab Title="ข้อมูลลูกค้า" IsActive="true">
									<Content>
										<div class="row">
											<div class="col-12 col-xl-8"></div>
											@if (UserInfo.RoleCode != RoleCodes.BRANCH01)
											{
												<div class="col-12 col-xl-3 text-end">
													<a class="btn btn-primary mw_6r" href="/return/loan">กลับ</a>
												</div>
											}
										</div>
										@if (formModel.Customer != null)
										{
											<PartialCustomerInfo formModel="formModel.Customer" />
										}
									</Content>
								</Tab>
								<Tab Title="ข้อมูลผู้ติดต่อ">
									<Content>
										<div class="d-flex align-items-center justify-content-center mh_10r">
											<p class="my-3 text-black-50">-ไม่พบข้อมูล-</p>
										</div>
									</Content>
								</Tab>
								<Tab Title="เอกสาร">
									<Content>
										<div class="d-flex align-items-center justify-content-center mh_10r">
											<p class="my-3 text-black-50">-ไม่พบข้อมูล-</p>
										</div>
									</Content>
								</Tab>
								<Tab Title="ประวัติการติดต่อ">
									<Content>
										<div class="d-flex align-items-center justify-content-center mh_10r">
											<p class="my-3 text-black-50">-ไม่พบข้อมูล-</p>
										</div>
									</Content>
								</Tab>
								<Tab Title="คู่ค้า">
									<Content>
										<div class="d-flex align-items-center justify-content-center mh_10r">
											<p class="my-3 text-black-50">-ไม่พบข้อมูล-</p>
										</div>
									</Content>
								</Tab>
							</Tabs>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<NotPermissionPage />
}





