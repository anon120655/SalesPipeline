@page "/customer/uploadfile"

<PageTitle>UploadFile</PageTitle>

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2"><img src="/image/icon/customerinfo.png" width="45" /></div>
						<div class="p-2">
							<p class="back_topic">เพิ่มรายการลูกค้า</p>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-12">
							<div class="row mb-3">
								<div class="col-12 col-sm-1"></div>
								<div class="col-12 col-sm-10">
									@* @if (!bClearInputFile)
								{
								<InputFile accept=".xlsx" OnChange="OnChooseFile" />
								} *@
									<div class=" dropzone @dropClass rounded">
										<div class="drag-image h_10r mb-2">
											@if (CustomerList != null && CustomerList.Count > 0 && _fileName != null)
											{
												<p>@_fileName</p>
											}
											else
											{
												<p>ลากไฟล์ประเภท CSV หรือ</p>
												<Button Style="background-color: #1378D5;color:white;"><i class="fa-solid fa-upload"></i> นำเข้าไฟล์</Button>
											}
										</div>
										<InputFile @key=@(_inputFileId) OnChange="@OnChooseFile"
												   accept=".xlsx, .xls, .csv"
												   @ondragenter="HandleDragEnter"
												   @ondragleave="HandleDragLeave">Browse File</InputFile>
									</div>
								</div>
								<div class="col-12 col-sm-1"></div>
							</div>
						</div>
					</div>

					<MessageError errorMessage="@_errorMessage" />

					<div class="row mt-5">
						<div class="col-12">
							<div class="table-responsive">
								<table class="table table_list table-bordered text-nowrap">
									<thead class="table-primary">
										<tr>
											<th class="text-center">ตรวจสอบ</th>
											@foreach (var item in header_list_key)
											{
												<th class="text-center">@item</th>
											}
										</tr>
									</thead>
									<tbody>
										@if (CustomerList == null)
										{
											<tr class="text-start align-middle">
												<td colspan="100">
													<i class="fa-solid fa-circle-notch fa-spin text-black-50 fa-xl my-2"></i>
												</td>
											</tr>
										}
										else if (CustomerList.Count == 0)
										{
											<tr class="text-start align-middle">
												<td colspan="100">
													<em>ไม่พบข้อมูล</em>
												</td>
											</tr>
										}
										else
										{
											foreach (var item in CustomerList)
											{
												<tr style="@(item.IsValidate == false ? "background-color: #fff5f6;" : "")">
													<td class="">
														@if (item.IsValidate == true)
														{
															<p class="text-success text-center">ผ่าน</p>
														}
														else
														{
															if (item.ValidateError?.Count > 0)
															{
																<ul class="text-danger mb-0">
																	@foreach (var item_error in item.ValidateError)
																	{
																		<li>@item_error</li>
																	}
																</ul>
															}
														}
													</td>
													<td class="text-center">@GeneralUtils.DateToEnStr(item.DateContact)</td>
													<td class="">@item.Master_ContactChannelId</td>
													<td class="text-center">@item.BranchName</td>
													<td class="text-center">@item.ProvincialOffice</td>
													<td class="text-center">@item.EmployeeName</td>
													<td class="text-center">@item.EmployeeId</td>
													<td class="text-center">@item.ContactName</td>
													<td class="text-center">@item.ContactTel</td>
													<td class="text-center">@item.JuristicPersonRegNumber</td>
													<td class="text-center">@item.CompanyName</td>
													<td class="text-center">@item.Master_BusinessTypeId</td>
													<td class="text-center">@item.Master_BusinessSizeId</td>
													<td class="text-center">@item.Master_ISICCodeId</td>
													<td class="text-center">@item.Master_YieldId</td>
													<td class="text-center">@item.Master_ChainId</td>
													<td class="text-center">@item.Master_LoanTypeId</td>
													<td class="text-center">@item.CompanyEmail</td>
													<td class="text-center">@item.CompanyTel</td>
													<td class="text-center">@item.ParentCompanyGroup</td>
													<td class="text-center">@item.HouseNo</td>
													<td class="text-center">@item.VillageNo</td>
													<td class="text-center">@item.ProvinceId</td>
													<td class="text-center">@item.AmphurId</td>
													<td class="text-center">@item.TambolId</td>
													<td class="text-center">@item.ZipCode</td>
													@if (item.Customer_Committees?.Count > 0)
													{
														foreach (var item_com in item.Customer_Committees)
														{
															<td class="text-center">@item_com.Name</td>
														}
													}
													<td class="text-center">@GeneralUtils.DateToEnStr(item.ShareholderMeetDay)</td>
													@if (item.Customer_Shareholders?.Count > 0)
													{
														foreach (var item_sha in item.Customer_Shareholders)
														{
															<td class="text-center">@item_sha.Name</td>
															<td class="text-center">@item_sha.Nationality</td>
															<td class="text-center">@item_sha.Proportion</td>
															<td class="text-center">@item_sha.NumberShareholder</td>
															<td class="text-center">@item_sha.TotalShareValue</td>
														}
													}
													<td class="text-center">@item.RegisteredCapital</td>
													<td class="text-center">@item.CreditScore</td>
													<td class="text-center">@item.FiscalYear</td>
													<td class="text-center">@GeneralUtils.DateToEnStr(item.StatementDate)</td>
													<td class="text-center">@item.TradeAccReceivable</td>
													<td class="text-center">@item.TradeAccRecProceedsNet</td>
													<td class="text-center">@item.Inventories</td>
													<td class="text-center">@item.LoansShort</td>
													<td class="text-center">@item.TotalCurrentAssets</td>
													<td class="text-center">@item.LoansLong</td>
													<td class="text-center">@item.LandBuildingEquipment</td>
													<td class="text-center">@item.TotalNotCurrentAssets</td>
													<td class="text-center">@item.AssetsTotal</td>
													<td class="text-center">@item.TradeAccPay</td>
													<td class="text-center">@item.TradeAccPayLoansShot</td>
													<td class="text-center">@item.TradeAccPayTotalCurrentLia</td>
													<td class="text-center">@item.TradeAccPayLoansLong</td>
													<td class="text-center">@item.TradeAccPayTotalNotCurrentLia</td>
													<td class="text-center">@item.TradeAccPayForLoansShot</td>
													<td class="text-center">@item.TradeAccPayTotalLiabilitie</td>
													<td class="text-center">@item.RegisterCapitalOrdinary</td>
													<td class="text-center">@item.RegisterCapitalPaid</td>
													<td class="text-center">@item.ProfitLossAccumulate</td>
													<td class="text-center">@item.TotalShareholders</td>
													<td class="text-center">@item.TotalLiabilitieShareholders</td>
													<td class="text-center">@item.TotalIncome</td>
													<td class="text-center">@item.CostSales</td>
													<td class="text-center">@item.GrossProfit</td>
													<td class="text-center">@item.OperatingExpenses</td>
													<td class="text-center">@item.ProfitLossBeforeDepExp</td>
													<td class="text-center">@item.ProfitLossBeforeInterestTax</td>
													<td class="text-center">@item.NetProfitLoss</td>
													<td class="text-center">@item.InterestNote</td>
												</tr>
											}
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class="my-4 text-center">
						<div class="d-flex bd-highlight align-items-center justify-content-center">
							<div class="p-2 bd-highlight">
								<Button @onclick=Cancel Color="ButtonColor.Secondary" Type="ButtonType.Button" Disabled="@isLoading" Class="mw_6r">
									กลับ
								</Button>
							</div>
							@if (CustomerList?.Where(x => x.IsValidate == true).Count() > 0)
							{
								<div class="p-2 bd-highlight">
									<Button Color="ButtonColor.Primary" @onclick=Save Type="ButtonType.Submit" Disabled="@isLoading" Class="mw_6r">
										@if (isLoading)
										{
											<span><i class="fa-solid fa-circle-notch fa-spin text-white-50 fa-lg"></i></span>
										}
										ยืนยัน
									</Button>
								</div>
							}
						</div>
						<small class="text-secondary">*ระบบจะนำเข้าเฉพาะรายการที่ผ่านการตรวจสอบ</small>
					</div>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<NotPermissionPage />
}

