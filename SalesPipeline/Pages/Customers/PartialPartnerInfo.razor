
<div class="container">
	<div class="row my-3">
		<div class="col-12">
			<table class="table table_list">
				<thead>
					<tr>
						<th scope="col">ชื่อคู่ค้า</th>
						<th scope="col">ประเภทธุรกิจ</th>
						<th scope="col">ผลผลิตหลัก</th>
						<th scope="col">ห่วงโซ่คุณค่า</th>
						<th scope="col">ขนาดธุรกิจ</th>
						<th scope="col">เบอร์โทร</th>
					</tr>
				</thead>
				<tbody>
					@if (formModel == null)
					{
						<tr class="text-center align-middle">
							<td colspan="100">
								<Spinner Class="my-2" Type="SpinnerType.Dots" Color="SpinnerColor.Secondary" />
							</td>
						</tr>
					}
					else if (formModel.Count == 0)
					{
						<tr class="text-center align-middle">
							<td colspan="100">
								<em>ไม่พบข้อมูล</em>
							</td>
						</tr>
					}
					else
					{
						foreach (var item in formModel)
						{
							<tr>
								<td>@GeneralUtils.EmptyTo(item.FullName)</td>
								<td>@GeneralUtils.EmptyTo(item.Master_BusinessTypeName)</td>
								<td>@GeneralUtils.EmptyTo(item.Master_YieldName)</td>
								<td>@GeneralUtils.EmptyTo(item.Master_ChainName)</td>
								<td>@GeneralUtils.EmptyTo(item.Master_BusinessSizeName)</td>
								<td>@GeneralUtils.EmptyTo(item.Tel)</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public List<Sale_PartnerCustom>? formModel { get; set; }
}
