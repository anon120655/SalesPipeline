					<label class="col-form-label">
						@formModel.TambolName
					</label>
				</div><label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">รหัสไปรษณีย์ :</label>
				<div class="col-6 col-md-7 col-xl-3">
					<label class="col-form-label">
						@formModel.ZipCode
					</label>
				</div>
			</div>
			<div class="form-group row mb-1">
				<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">อีเมล : </label>
				<div class="col-6 col-md-7 col-xl-3">
					<label class="col-form-label">
						@formModel.CompanyEmail
					</label>
				</div><label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">โทรศัพท์ :</label>
				<div class="col-6 col-md-7 col-xl-3">
					<label class="col-form-label">
						@formModel.CompanyTel
					</label>
				</div>
			</div>
			<div class="form-group row mb-1">
				<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">กลุ่มบริษัทแม่ : </label>
				<div class="col-6 col-md-7 col-xl-3">
					<label class="col-form-label">
						@formModel.ParentCompanyGroup
					</label>
				</div>
			</div>
		</div>
	</div>
	@* กรรมการบริษัท *@
	<div class="row my-3">
		<div class="col-12">
			<div class="row">
				<div class="col-12 col-xl-6">
					<div class="row">
						<label class="col-sm-4 col-form-label text-lg-end fw-bold text-decoration-underline">กรรมการบริษัท</label>
						<div class="col-sm-7"></div>
					</div>
				</div>
			</div>
			@if (formModel.Customer_Committees != null && formModel.Customer_Committees.Count > 0)
			{
				int index = 1;
				foreach (var item in formModel.Customer_Committees)
				{
					Guid ID = item.Id;
					<div class="form-group row mb-1">
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">ชื่อกรรมการ คนที่ @index </label>
						<div class="col-6 col-md-7 col-xl-3">
							<label class="col-form-label">
								@item.Name
							</label>
						</div>
					</div>
					index++;
				}
			}
			else
			{
				<div class="form-group row mb-1">
					<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end"></label>
					<div class="col-6 col-md-7 col-xl-3">
						<label class="col-form-label text-black-50">
							ไม่พบข้อมูล
						</label>
					</div>
				</div>
			}
		</div>
	</div>
	@* ผู้ถือหุ้น *@
	<div class="row my-3">
		<div class="col-12">
			<div class="row">
				<div class="col-12 col-xl-6">
					<div class="row">
						<label class="col-sm-4 col-form-label text-lg-end fw-bold text-decoration-underline">ผู้ถือหุ้น</label>
						<div class="col-sm-7"></div>
					</div>
				</div>
			</div>
			<div class="form-group row mb-1">
				<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">วันประชุมผู้ถือหุ้น : </label>
				<div class="col-6 col-md-7 col-xl-3">
					<label class="col-form-label">
						@GeneralUtils.getFullThaiShot(formModel.ShareholderMeetDay)
					</label>
				</div>
			</div>
			@if (formModel.Customer_Shareholders != null && formModel.Customer_Shareholders.Count > 0)
			{
				int index = 1;
				foreach (var item in formModel.Customer_Shareholders)
				{
					Guid ID = item.Id;
					<div class="form-group row mb-1  text-decoration-underline">
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">ผู้ถือหุ้น คนที่ @index </label>
					</div>
					<div class="form-group row mb-1">
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">ชื่อผู้ถือหุ้น : </label>
						<div class="col-6 col-md-7 col-xl-3">
							<label class="col-form-label">
								@item.Name
							</label>
						</div>
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">สัญชาติ :</label>
						<div class="col-6 col-md-7 col-xl-3">
							<label class="col-form-label">
								@item.Nationality
							</label>
						</div>
					</div>
					<div class="form-group row mb-1">
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">สัดส่วนการถือหุ้น : </label>
						<div class="col-6 col-md-7 col-xl-3">
							<label class="col-form-label">
								@item.Proportion
							</label>
						</div>
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">จำนวนหุ้นที่ถือ :</label>
						<div class="col-6 col-md-7 col-xl-3">
							<label class="col-form-label">
								@item.NumberShareholder
							</label>
						</div>
					</div>
					<div class="form-group row mb-1">
						<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end">มูลค่าหุ้นทั้งหมด : </label>
						<div class="col-6 col-md-7 col-xl-3">
							<label class="col-form-label">
								@item.TotalShareValue?.ToString("#,##0.00")
							</label>
						</div>
					</div>
					index++;
				}
			}
			else
			{
				<div class="form-group row mb-1">
					<label class="col-6 col-md-4 col-xl-2 col-form-label text-lg-end"></label>
					<div class="col-6 col-md-7 col-xl-3">
						<label class="col-form-label text-black-50">
							ไม่พบข้อมูล
						</label>
					</div>
				</div>
			}
		</div>
	</div>
	@* ข้อมูลทางการเงิน *@
	<div class="row my-3">
		<div class="col-12">
			<div class="row">
				<div class="col-12 col-xl-6">
					<div class="row">
						<label class="col-sm-4 col-form-label text-lg-end fw-bold text-decoration-underline">ข้อมูลทางการเงิน</label>
