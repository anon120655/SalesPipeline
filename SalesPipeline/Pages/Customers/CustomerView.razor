@page "/customer/view/{id:guid}"

<PageTitle>ข้อมูลและสถานะลูกค้า</PageTitle>

<MessageError errorMessage="@_errorMessage" />

@if (_permission.IsView && IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2"><img src="/image/icon/customerinfo.png" width="45" /></div>
						<div class="p-2">
							<p class="back_topic">ข้อมูลและสถานะลูกค้า</p>
						</div>
					</div>
					<div class="row mt-3 mh_40r">
						<div class="col-12 tabs_elm">
							<Tabs EnableFadeEffect="true" NavStyle="NavStyle.Pills">
								<Tab Title="ข้อมูลลูกค้า" IsActive="true">
									<Content>
										<div class="row">
											<div class="col-12 col-xl-8"></div>
											@if (UserInfo.RoleCode != RoleCodes.BRANCH_REG_01)
											{
												<div class="col-12 col-xl-3 text-end">
													<a class="btn btn-primary mw_6r" href="/customer/update/@formModel.Customer?.Id">แก้ไขข้อมูล</a>
												</div>
											}
										</div>
										@if (formModel.StatusSaleId == StatusSaleModel.WaitAPIPHOENIX)
										{
											<div class="row">
												<div class="col-12 col-xl-4 text-end">
													<a class="btn btn-outline-success mw_6r" @onclick=UpdateStatusWaitResults>ผ่านการวิเคราะห์สินเชื่อ(PHOENIX) -> รอบันทึกผลลัพธ์</a>
												</div>
											</div>
										}
										@if (formModel != null)
										{
											<PartialCustomerInfo formModel="formModel" />
										}
									</Content>
								</Tab>
								<Tab Title="ข้อมูลผู้ติดต่อ" OnClick="ShowTabContactInfo">
									<Content>
										<PartialContactInfo formModel="formModel.Sale_Contact_Infos" />
									</Content>
								</Tab>
								<Tab Title="เอกสาร" OnClick="ShowTabDocument">
									<Content>
										<PartialDocument formModel="formModel" />
									</Content>
								</Tab>
								<Tab Title="ประวัติการติดต่อ" OnClick="ShowTabContactHistory">
									<Content>
										<PartialContactHistory formModel="formModel.Sale_Contact_Histories" />
									</Content>
								</Tab>
								<Tab Title="คู่ค้า" OnClick="ShowTabPartneInfo">
									<Content>
										<PartialPartnerInfo formModel="formModel.Sale_Partners" />
									</Content>
								</Tab>
							</Tabs>
						</div>
					</div>
					<div class="my-4 text-center">
						<div class="d-flex bd-highlight align-items-center justify-content-center">
							<div class="p-2 bd-highlight">
								@if (formModel != null)
								{
									<Button @onclick=Cancel Color="ButtonColor.Secondary" Type="ButtonType.Button" Class="mw_6r">
										กลับ
									</Button>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<NotPermissionPage />
}

