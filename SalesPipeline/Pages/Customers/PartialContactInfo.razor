
<div class="container" style="max-width:90%;">
	<div class="row my-3">
		<div class="col-12">
			<table class="table table_list">
				<thead>
					<tr>
						<th scope="col">ชื่อลูกค้าที่ติดต่อ</th>
						<th scope="col">ตำแหน่ง</th>
						<th scope="col">เบอร์โทร</th>
						<th scope="col">อีเมล</th>
						<th scope="col">วันที่ได้รับข้อมูล</th>
					</tr>
				</thead>
				<tbody>
					@if (formModel == null)
					{
						<tr class="text-center align-middle">
							<td colspan="100">
								<Spinner Class="my-2" Type="SpinnerType.Dots" Color="SpinnerColor.Secondary" />
							</td>
						</tr>
					}
					else if (formModel.Count == 0)
					{
						<tr class="text-center align-middle">
							<td colspan="100">
								<em>ไม่พบข้อมูล</em>
							</td>
						</tr>
					}
					else
					{
						foreach (var item in formModel)
						{
							<tr>
								<td>@GeneralUtils.EmptyTo(item.FullName)</td>
								<td>@GeneralUtils.EmptyTo(item.Position)</td>
								<td>@GeneralUtils.EmptyTo(item.Tel)</td>
								<td>@GeneralUtils.EmptyTo(item.Email)</td>
								<td>
									@GeneralUtils.DateToThString(item.CreateDate) @GeneralUtils.DateToTimeString(item.CreateDate)
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


@code {
	[Parameter]
	public List<Sale_Contact_InfoCustom>? formModel { get; set; }
}
