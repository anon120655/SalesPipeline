@page "/setting/config"

<PageTitle>ตั้งค่าระบบ</PageTitle>
<MessageError errorMessage="@_errorMessage" />

<style>
	.form-check-label {
		display: flex;
		align-items: center;
		margin-left: 0.5rem; /* ปรับช่องว่างระหว่างปุ่มกับ label */
	}
</style>

@if (_permission.IsView)
{
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 my-2">
				<div class="box_content">
					<div class="d-flex flex-row align-items-center mb-3 border-bottom">
						<div class="p-2">
							<i class="fa-solid fa-sliders fs_2r"></i>
						</div>
						<div class="p-2">
							<p class="back_topic">ตั้งค่าระบบ</p>
						</div>
					</div>
					<div class="mt-3 mx-4">
						@if (Items.Count > 0)
						{
							foreach (var item in Items)
							{
								if (item.Code == ConfigCode.LOGIN_FAIL)
								{
									<div class="row mt-3">
										<div class="col-12 col-lg-5">
											<div class="mb-3">
												<label class="form-label fw-bold">จำนวนครั้งในการล็อคอินผิดพลาด</label>
												<input @bind="item.Value" type="number" class="form-control">
											</div>
										</div>
										<div class="col-12 col-lg-7"></div>
									</div>
								}
								else if (item.Code == ConfigCode.CHANCEPASS_Z)
								{
									<div class="d-flex justify-content-center"><hr class="w-100"></div>
									<div class="mb-3">
										<label for="gender" class="form-label fw-bold">เปิดปิดแถว Z เมนูโอกาสขอสินเชื่อผ่าน</label>
										<div>
											<div class="form-check form-check-inline">
												<input @onclick="@(() => HandleCHANCEPASS_Z("1"))"
													   class="form-check-input" type="radio" name="gender" value="1" checked="@(item.Value == "1")">
												<label class="form-check-label">แสดง</label>
											</div>
											<div class="form-check form-check-inline">
												<input @onclick="@(() => HandleCHANCEPASS_Z("0"))"
													   class="form-check-input" type="radio" name="gender" value="0" checked="@(item.Value == "0")">
												<label class="form-check-label">ไม่แสดง</label>
											</div>
										</div>
									</div>
								}
							}
						}

					</div>
					<div class="my-4 text-center">
						<div class="d-flex bd-highlight align-items-center justify-content-center">
							<div class="p-2 bd-highlight">
								<Button @onclick=Save Color="ButtonColor.Primary" Type="ButtonType.Button" Disabled="@isLoading" Class="mw_6r">
									@if (isLoading)
									{
										<Spinner Color="SpinnerColor.Light" Size="SpinnerSize.Small" />
									}
									บันทึก
								</Button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

}
else
{
	<NotPermissionPage />
}


