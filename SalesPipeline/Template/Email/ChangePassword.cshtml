@using Microsoft.Extensions.Options;
@using SalesPipeline.Utils;
@using SalesPipeline.Utils.Resources.Authorizes.Users

@model SalesPipeline.Utils.Resources.Authorizes.Users.User_Main
@inject IOptions<AppSettings> _appSet

@{
	UserCustom user = Model.User ?? new();
	var urlFull = $"{_appSet.Value.baseUriWeb}/changepassword";
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<meta charset="UTF-8">
	<title>email sender</title>
</head>
<body>
	<div style="background-color: #499bc7; height:6px;">
	</div>
	<div style="font-size: 12px; margin: auto; padding: 20px; text-align: left; background-color:#E3F4F9; ">
		<table style="color: #ffffff;" width="100%" cellspacing="0" cellpadding="0" border="0">
			<tbody>
				<tr>
					<td width="5%">
						<img src="https://img2.pic.in.th/pic/logo_bacc.png" width="50">
					</td>
					<td style="padding: 0px 15px 0 15px; border-right: 0px; " width="95%">
						<b style="font-size: 12pt; color: #40ae49;">ธนาคารเพื่อการเกษตรและสหกรณ์การเกษตร</b> <br />
						<b style="font-size: 9pt; color:#8d8d8d;">Bank for Agriculture and Agricultural Coolperatives</b> <br />
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div>
		<div style="font-size: 13px; padding: 20px; font-family: Arial, Helvetica; color: #303030;">
			<div>
				<p>
					<b>เรียน...@user.FullName</b>
				</p>
				<p style="margin-left:15px;"><b>วันที่เริ่มใช้งาน :</b> @GeneralUtils.getFullThaiFullShot(user.CreateDate) @GeneralUtils.DateToTimeString(user.CreateDate)</p>
				<p style="margin-left:15px;"><b>รหัสผ่าน :</b> @user.DefaultPassword</p>
			</div>
			<br />
			<div>
				<p>รหัสผ่านนี้เป็นใช้ครั้งแรกเท่านั้น สามารถเปลี่ยนรหัสผ่านได้ที่</p>
			</div>
			<br />
			<div style="text-align:left;">
				<a href="@urlFull" target="_blank"
				   style="font-size: 15px; background-color: #4CB6DB; line-height: 1.0; font-weight: 400; height: 38px; text-decoration: none; padding: 0.775rem 3.55rem; border-radius: 8px; color: #fff;">
					Change Password
				</a>
			</div>
			<br />
			<div>
				<p>หรือสามารถล็อกอินเข้าใช้งานได้ที่ <span style="color:#4CB6DB;">https://rmsales.app.baac.or.th</span></p>
			</div>
			<br />
			<p>ขอแสดงความนับถือ</p>
			<p>Support ธ.ก.ส.</p>
			<p>ธนาคารเพื่อการเกษตรและสหกรณ์การเกษตร</p>
			<br />
			<hr style="border: 1px solid #e6e6e6;width: 96%;" />
			<br />
			<div style="text-align:center;">
				<p>Copy Right 2023 Bank for Agriculture and Agricultural Cooperatives</p>
			</div>
		</div>
	</div>
	<div style="background-color: #499bc7; height:6px;">
	</div>
</body>
</html>